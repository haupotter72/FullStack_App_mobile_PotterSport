<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_giohang_image"
            android:layout_width="94dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_giohang_tensp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Tên sản phẩm"
                android:textColor="#182434"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_csize"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:text="Size: "
                android:textColor="#182434"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_size_giay"
                android:layout_width="100dp"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="#182434"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="39"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:text="100đ"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:src="@drawable/ic_remove_24"
                    android:id="@+id/item_giohang_tru"
                    android:layout_weight="1.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:gravity="center"
                    android:layout_weight="1.3"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_weight="1.4"
                    android:id="@+id/item_giohang_cong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_baseline_drag_handle_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:text="300đ"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5.3"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
        
</androidx.cardview.widget.CardView>