<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/anh6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserAccountActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#182434"
        app:layout_constraintTop_toTopOf="parent"
        app:title="N8SPORT | Thông Tin Cá Nhân"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp">


    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="@+id/toobar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/xinchaoten"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Xin chào "

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/texttile"
                    android:textSize="25sp"
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/topback"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageaccusser"
                    android:layout_width="173dp"
                    android:layout_height="145dp"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/ic_space" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/edittenuser"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtttten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Họ và Tên"
                    android:textColor="@color/texttile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="Admin"

                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/edittentaikhoan"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txttttendangnhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Tên Tài Khoản"
                    android:textColor="@color/texttile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usertendangnhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="admin"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/editsodienthoai"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtttsdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Số điện thoại "
                    android:textStyle="bold"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/useraccphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="0123456789"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/editemail"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtttemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Email "
                    android:textStyle="bold"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/useraccemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="admin@gmail.com"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/edittaddressuser"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtttdiachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Địa chỉ "
                    android:textStyle="bold"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/useraccaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="Đà Nẵng"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/editpass"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtttdoimatkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Mật khẩu "
                    android:textStyle="bold"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/useraccpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="right"
                    android:text="********"
                    android:textColor="@color/texttile"
                    android:textSize="16sp" />

            </LinearLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="@color/vien"-->
<!--                android:layout_height="1dp"/>-->

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnbackhomev1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:background="#182434"
        android:text="Trở về trang chủ"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.938"
        tools:layout_editor_absoluteX="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>